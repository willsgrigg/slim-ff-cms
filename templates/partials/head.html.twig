<meta charset="utf-8"/>
<title>{{ site.title }}</title>
<link href='//fonts.googleapis.com/css?family=Lato:300' rel='stylesheet' type='text/css'>
<style>
    body {
        margin: 50px 0 0 0;
        padding: 0;
        width: 100%;
        font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
        text-align: center;
        color: #aaa;
        font-size: 18px;
    }

    h1 {
        color: #719e40;
        letter-spacing: -3px;
        font-family: 'Lato', sans-serif;
        font-size: 100px;
        font-weight: 200;
        margin-bottom: 0;
    }
    {% if config.edit %}
        [data-editable-main-overlay] {
            position: fixed;
            width: 25%;
            height: auto;
            left: 0;
            top: 0;
        }

        [data-editable-add-page-overlay] {
            display: none;
        }

        [data-editable-image-wrapper] form[data-editable-image-upload-form] {
            position: absolute;
            width: 100%;
        }
    {% endif %}
</style>
<script
        src="https://code.jquery.com/jquery-3.2.1.min.js"
        integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
        crossorigin="anonymous"></script>